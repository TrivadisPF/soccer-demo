<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.trivadis.soccer.demo</groupId>
  <artifactId>calc-ball-possession-stats</artifactId>
  <name>Calculate Ball Possession in Kafka Streams</name>
  <version>1.0-SNAPSHOT</version>
  <description>Simple Azkarra Streams project</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <release>11</release>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <version>2.8.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>dockerBuild</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <from>
            <image>streamthoughts/azkarra-streams-worker:${azkarra.streams.version}</image>
          </from>
          <to>
            <image>trivadis/calc-ball-possession-stats</image>
            <auth>
              <username>gschmutz</username>
            </auth>
          </to>
          <extraDirectories>
            <paths>
              <path>
                <from>${project.basedir}/target/classes</from>
                <into>/etc/azkarra</into>
              </path>
            </paths>
          </extraDirectories>
          <containerizingMode>packaged</containerizingMode>
          <container>
            <entrypoint>INHERIT</entrypoint>
            <appRoot>/usr/share/azkarra-components/app</appRoot>
            <creationTime>USE_CURRENT_TIMESTAMP</creationTime>
            <environment>
              <AZKARRA_COMPONENT_PATHS>/usr/share/azkarra-components</AZKARRA_COMPONENT_PATHS>
            </environment>
          </container>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>log4j:*</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>azkarra.StreamingApp</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>confluent</id>
      <url>https://packages.confluent.io/maven/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.apache.kafka</groupId>
      <artifactId>kafka-streams</artifactId>
      <version>2.7.0</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>slf4j-api</artifactId>
          <groupId>org.slf4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>connect-json</artifactId>
          <groupId>org.apache.kafka</groupId>
        </exclusion>
        <exclusion>
          <artifactId>rocksdbjni</artifactId>
          <groupId>org.rocksdb</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>io.streamthoughts</groupId>
      <artifactId>azkarra-metrics</artifactId>
      <version>0.9.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>micrometer-core</artifactId>
          <groupId>io.micrometer</groupId>
        </exclusion>
        <exclusion>
          <artifactId>micrometer-registry-prometheus</artifactId>
          <groupId>io.micrometer</groupId>
        </exclusion>
        <exclusion>
          <artifactId>javax.inject</artifactId>
          <groupId>javax.inject</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>io.streamthoughts</groupId>
      <artifactId>azkarra-streams</artifactId>
      <version>0.9.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>azkarra-server</artifactId>
          <groupId>io.streamthoughts</groupId>
        </exclusion>
        <exclusion>
          <artifactId>config</artifactId>
          <groupId>com.typesafe</groupId>
        </exclusion>
        <exclusion>
          <artifactId>javax.inject</artifactId>
          <groupId>javax.inject</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>io.streamthoughts</groupId>
      <artifactId>azkarra-api</artifactId>
      <version>0.9.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>azkarra-commons</artifactId>
          <groupId>io.streamthoughts</groupId>
        </exclusion>
        <exclusion>
          <artifactId>javax.ws.rs-api</artifactId>
          <groupId>javax.ws.rs</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <kafka.streams.version>2.7.0</kafka.streams.version>
    <maven.compiler.target>11</maven.compiler.target>
    <azkarra.streams.version>0.9.2</azkarra.streams.version>
    <maven.compiler.source>11</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4j.version>2.13.3</log4j.version>
    <confluent.version>6.0.1</confluent.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
</project>

